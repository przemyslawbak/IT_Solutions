<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="~/src/lib/bootstrap/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/dist/site.css" />
    <link rel="icon" href="~/src/img/favicon.gif">
    <title>@ViewBag.Title - Przemysław Bąk {IT Solutions}</title>
</head>

<body>
    <wrapper class="d-flex flex-column">
        <div class="header">
            <!--HEADER-->
            <div class="mainHeader">
                <div class="spotlight"></div>
                <div class="col-sm-9 col-xs-12 mainTextContainer">
                    <div class="container1" data-text="Przemysław Bąk {IT Solutions} ">
                        <span class="shadeMe">Przemysław Bąk {IT Solutions}</span>
                    </div>
                    <div class="container2" data-text="for you and your company">
                        <span class="shadeMe">for you and your company</span>
                    </div>
                </div>
            </div>
            <div class="mainNavbar">
                <div><a class="mainButton projects noSelect " rel="canonical" asp-controller="Home" asp-action="Index">about</a></div>
                <div><a class="mainButton contact noSelect " rel="canonical" asp-controller="Home" asp-action="Contact">contact</a></div>
                <div><a class="mainButton technologies noSelect " rel="canonical" asp-controller="Home" asp-action="Technologies">technologies</a></div>
            </div>
        </div>
        <!--BODY-->
        <main class="container-fluid py-3 flex-fill">
            @RenderBody()
        </main>
        <!--FOOTER-->
        <footer>
            <div class="footText">&copy @DateTime.Now.Year - Przemysław Bąk {IT Solutions}</div>
        </footer>
    </wrapper>
    <!--SCRIPTS-->
    <script src="~/src/js/jquery.js"></script>
    <script src="~/src/lib/bootstrap/js/bootstrap.min.js"></script>
    <script src="~/src/js/realshadow.js"></script>
    <script src="~/src/js/headerShading.js"></script>
</body>
</html>

